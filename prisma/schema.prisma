generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model members {
  id                       String      @id @default(cuid())
  fullName                 String
  bio                      String
  image                    String?
  project                  project     @relation(fields: [projectId], references: [id])
  projectId                String
  status                   String      @default("active")
  publication              publication @relation(fields: [publicationId], references: [id])
  publicationId            String
  address                  String
  entrydate                DateTime    @default(now())
  portfolio                String?
  email                    String
  stack                    stack       @relation(fields: [stackId], references: [id])
  stackId                  String
  languages                languages   @relation(fields: [languagesId], references: [id])
  languagesId              String
  mentor                   Boolean     @default(false)
  intrests                 String
  expetations              String
  whatdoyoubringtothetable String
  commetmentlevel          Int
  roles                    roles[]
  framworks                framworks[]

  @@map("Team Members")
}

model project {
  id          String    @id @default(cuid())
  members     members[]
  livelink    String
  image       String
  description String
  opensource  Boolean   @default(false)
  githublink  String?
  memberrole  roles     @relation(fields: [rolesId], references: [id])
  rolesId     String

  @@map("Projects")
}

model publication {
  id      String    @id @default(cuid())
  type    String
  members members[]

  
}

model stack {
  id      String    @id @default(cuid())
  stack   String
  members members[]
}

model languages {
  id       String    @id @default(cuid())
  language String
  members  members[]
}

model roles {
  id        String    @id @default(cuid())
  members   members   @relation(fields: [membersId], references: [id])
  membersId String
  project   project[]
}

model framworks {
  id        String  @id @default(cuid())
  framworks String
  members   members @relation(fields: [membersId], references: [id])
  membersId String
}
